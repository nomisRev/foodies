{
  "realm": "foodies-keycloak",
  "sslRequired": "none",
  "enabled": true,
  "registrationAllowed": true,
  "resetPasswordAllowed": true,
  "eventsEnabled": true,
  "eventsListeners": ["jboss-logging", "profile-webhook"],
  "enabledEventTypes": ["REGISTER"],
  "clients": [
    {
      "clientId": "foodies",
      "directAccessGrantsEnabled": true,
      "publicClient": false,
      "secret": "foodies_client_secret",
      "redirectUris": ["http://localhost:8080/oauth/callback"],
      "webOrigins": ["http://localhost:8080"],
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:8080/*"
      }
    },
    {
      "clientId": "basket-service",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "basket_service_client_secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "optionalClientScopes": [
        "aud-basket-service",
        "aud-menu-service",
        "aud-order-service",
        "aud-payment-service",
        "aud-profile-service"
      ]
    },
    {
      "clientId": "menu-service",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "menu_service_client_secret",
