{
  "realm": "foodies-keycloak",
  "sslRequired": "none",
  "enabled": true,
  "registrationAllowed": true,
  "resetPasswordAllowed": true,
  "eventsEnabled": true,
  "eventsListeners": ["jboss-logging", "profile-webhook"],
  "enabledEventTypes": ["REGISTER"],
  "clients": [
    {
      "clientId": "foodies",
      "directAccessGrantsEnabled": true,
      "publicClient": false,
      "secret": "foodies_client_secret",
      "redirectUris": ["http://localhost:8080/oauth/callback"],
      "webOrigins": ["http://localhost:8080"],
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:8080/*"
      }
    },
    {
      "clientId": "basket-service",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "basket_service_client_secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false
    },
    {
      "clientId": "menu-service",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "menu_service_client_secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false
    },
    {
      "clientId": "order-service",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "order_service_client_secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false
    },
    {
      "clientId": "payment-service",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "payment_service_client_secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false
    },
    {
      "clientId": "profile-service",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "profile_service_client_secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false
    }
  ],
  "users": [
    {
      "username": "food_lover",
      "enabled": true,
      "email": "food_lover@gmail.com",
      "firstName": "Food",
      "lastName": "Lover",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": ["user"]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Regular user with standard permissions"
      }
    ]
  }
}
